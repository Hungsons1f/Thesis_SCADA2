                                <Setter Property="Width" Value="87"/>
                            </Style>
                        </StackPanel.Resources>

                        <Button ToolTip="Giám sát" Style="{StaticResource BtnMenu}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
